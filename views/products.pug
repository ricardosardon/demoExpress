doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
    h1 Products 

    section
            each product in products
                article
                    h4=product.title
                    p Precio: #{product.price}
                    p=product.image
                    img(src=product.image, alt="")

                    